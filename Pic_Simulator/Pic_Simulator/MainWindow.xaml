<Window x:Class="Pic_Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pic_Simulator"
        mc:Ignorable="d"

        WindowStartupLocation="CenterScreen" WindowState="Normal"
        ResizeMode="CanResizeWithGrip"
        Title="Pic Simulator" Width="960" Height="540">
    <Grid Name="MyGrid">
        <Menu Margin="0,0,0,0" VerticalAlignment="Top" Height="40">
            <MenuItem Header="File" Height="40" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="9">
                <MenuItem Header="Laden" Click="LoadFile"></MenuItem>
            </MenuItem>
            <Menu/>
        </Menu>
        
        <TextBox Name ="Result" HorizontalAlignment="Left" Margin="788,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Height="196"/>
        <Button Content="Weiter" HorizontalAlignment="Left" Margin="788,316,0,0" VerticalAlignment="Top" Height="28" Width="70" Click="OneStep"/>
        <ScrollViewer Name="CodeScroller" VerticalScrollBarVisibility="Visible" Margin="77,242,205,10">
            <StackPanel Name="Stack" Height="Auto" Width="653"/>
        </ScrollViewer>
        <DataGrid Name="MyDataGrid"   Margin="0,40,713,283"></DataGrid>   </Grid>
</Window>